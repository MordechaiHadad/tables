    "sourceMap": true,
    "target": "ESNext",
    "outDir": "build/compiled",
    "declaration": true,
    "strict": true,
    "module": "esnext",
    "noEmitOnError": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": false,
  },
  "include": ["src"]
